index e287c06..2fff049 100644
--- a/monitor.c
+++ b/monitor.c
@@ -22,6 +22,9 @@
  * THE SOFTWARE.
  */
 #include <dirent.h>
+#define TRACE__CONTROL__USE__TRACE_PRINT_EVENTS
+#include "trace/control.h"
+#undef TRACE__CONTROL__USE__TRACE_PRINT_EVENTS
