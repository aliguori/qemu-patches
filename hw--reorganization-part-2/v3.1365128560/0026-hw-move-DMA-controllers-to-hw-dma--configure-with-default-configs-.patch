---
 default-configs/sparc-softmmu.mak | 2 ++
 hw/arm/Makefile.objs              | 7 ++-----
 hw/cris/Makefile.objs             | 1 -
 hw/dma/Makefile.objs              | 6 ++++++
 hw/{ => dma}/etraxfs_dma.c        | 0
 hw/{ => dma}/omap_dma.c           | 0
 hw/{ => dma}/pxa2xx_dma.c         | 0
 hw/{ => dma}/soc_dma.c            | 0
 hw/{ => dma}/sparc32_dma.c        | 0
