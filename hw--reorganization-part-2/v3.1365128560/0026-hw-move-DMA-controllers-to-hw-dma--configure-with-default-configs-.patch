 rename hw/{ => dma}/omap_dma.c (100%)
 rename hw/{ => dma}/pxa2xx_dma.c (100%)
 rename hw/{ => dma}/soc_dma.c (100%)
 rename hw/{ => dma}/sparc32_dma.c (100%)
